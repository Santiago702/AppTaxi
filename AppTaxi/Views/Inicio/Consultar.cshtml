@model Invitado
@{
    ViewData["Title"] = "Datos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <div class="d-flex justify-content-center mt-4">
        <div class="card shadow-lg rounded-4 p-4 w-75">
            <div class="row g-3 align-items-center">
                <!-- Imagen -->
                <div class="col-md-4 text-center">
                    <img src="https://icons.veryicon.com/png/o/internet--web/prejudice/user-128.png"
                         class="img-fluid rounded-circle border shadow-sm p-2"
                         alt="@Model.Foto"
                         style="max-width: 150px;">
                </div>

                <!-- Información -->
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title text-center fw-bold">Información del Usuario</h4>
                        <hr />

                        <div class="row">
                            <div class="col-md-6">
                                <p class="card-text"><strong>Nombre:</strong> <span class="text-muted">@Model.Nombre</span></p>
                                <p class="card-text"><strong>Cédula:</strong> <span class="text-muted">@Model.NumeroCedula</span></p>
                                <p class="card-text"><strong>RH:</strong> <span class="text-muted">@Model.GrupoSanguineo</span></p>
                                <p class="card-text"><strong>EPS:</strong> <span class="text-muted">@Model.Eps</span></p>
                                <p class="card-text"><strong>ARL:</strong> <span class="text-muted">@Model.Arl</span></p>
                                <p class="card-text">
                                    <strong>Estado:</strong>
                                    <span class="badge @(Model.EstadoConductor ? "bg-success" : "bg-danger")">
                                        @(Model.EstadoConductor ? "Activo" : "Inactivo")
                                    </span>
                                </p>
                            </div>

                            <div class="col-md-6">
                                <p class="card-text"><strong>Empresa:</strong> <span class="text-muted">@Model.NombreEmpresa</span></p>
                                <p class="card-text"><strong>NIT:</strong> <span class="text-muted">@Model.Nit</span></p>
                                <p class="card-text"><strong>Placa:</strong> <span class="text-muted">@Model.Placa</span></p>
                                <p class="card-text">
                                    <strong>Estado Vehículo:</strong>
                                    <span class="badge @(Model.EstadoVehiculo ? "bg-primary" : "bg-warning")">
                                        @(Model.EstadoVehiculo ? "Habilitado" : "No Habilitado")
                                    </span>
                                </p>
                                <p class="card-text"><strong>SOAT:</strong> <span class="text-muted">@Model.Soat</span></p>
                                <p class="card-text"><strong>Tecno Mecánica:</strong> <span class="text-muted">@Model.TecnicoMecanica</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center mt-4">
        <div class="card text-dark bg-warning shadow-lg rounded-4 p-4 w-50 text-center">
            <div class="card-header fw-bold">Error al Buscar</div>
            <div class="card-body">
                <h5 class="card-title">No se encontraron registros</h5>
                <p class="card-text">Prueba a revisar tus datos ingresados</p>
            </div>
        </div>
    </div>
}

<!-- Botón de regreso centrado -->
<div class="d-flex justify-content-center mt-4">
    <a asp-action="Index" asp-controller="Inicio" class="btn btn-success px-4 py-2">Volver</a>
</div>


