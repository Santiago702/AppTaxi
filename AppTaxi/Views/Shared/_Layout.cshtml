<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movilidad Urbana</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="border-bottom">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="/Imagenes/Escudo.png" alt="Escudo Municipal" width="40" height="40" class="d-inline-block align-top me-2">
                    <span class="h5 mb-0">Secretaría de Transito - Facatativá</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Inicio" asp-action="Index">Consulta Ciudadana</a>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="btn btn-light text-primary fw-medium" asp-controller="Inicio" asp-action="Login">
                                Acceso Funcionarios
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1 py-5">
        <div class="container">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-body p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-dark text-white mt-auto py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Contacto</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-geo-alt me-2"></i>Alcaldía Municipal - Carrera 5 #10-20
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone me-2"></i>(601) 123 4567
                        </li>
                        <li>
                            <i class="bi bi-envelope me-2"></i>movilidad@ciudad.gov.co
                        </li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Enlaces de interés</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Trámites en línea</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Preguntas frecuentes</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Transparencia institucional</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Horario de atención</h5>
                    <p class="mb-2">Lunes a Viernes: 7:30 AM - 5:00 PM</p>
                    <p>Jornada continua</p>
                </div>
            </div>

            <div class="border-top pt-4 text-center">
                <p class="mb-0">
                    &copy; @DateTime.Now.Year - Alcaldía Municipal. Todos los derechos reservados.
                    <br>Desarrollado por la Secretaría de Movilidad
                </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>