@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-body">
            <h1 class="text-danger fw-bold">¡Oops! Algo salió mal 🚧</h1>
            <h4 class="text-muted">Ocurrió un error mientras procesábamos tu solicitud.</h4>

            @if (Model.ShowRequestId)
            {
                <p class="mt-3">
                    <strong>ID de la Solicitud:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <hr>
            <p class="text-muted">
                Si el problema persiste, por favor contacta al soporte técnico.
            </p>

            <a href="/" class="btn btn-primary mt-3"><i class="fas fa-home"></i> Volver al inicio</a>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        margin: auto;
        padding: 20px;
        border-radius: 10px;
        background-color: #fff;
    }
    body {
        background-color: #f8f9fa;
    }
</style>
