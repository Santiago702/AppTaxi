<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Taxis Faca</title>

    <!-- Bootstrap y Fuentes -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: 'Big Shoulders', sans-serif;
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .btn-lg {
            font-size: 1.25rem;
            padding: 0.75rem 1.5rem;
        }

        .nav-link {
            font-size: 1.2rem;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Barra de Navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-3 shadow-sm">
        <div class="container">
            <a class="navbar-brand fs-2 fw-bold" asp-controller="Conductor" asp-action="Inicio">
                <i class="bi bi-car-front-fill"></i> Taxis Faca
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-2">
                        <a class="nav-link btn btn-outline-light d-block text-start"
                           asp-controller="Conductor" asp-action="Horarios">
                            <i class="bi bi-clock-history me-2"></i>Horarios
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link btn btn-outline-light d-block text-start"
                           asp-controller="Conductor" asp-action="Perfil">
                            <i class="bi bi-person-circle me-2"></i>Perfil
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link btn btn-danger d-block text-start"
                           asp-controller="Inicio" asp-action="CerrarSesion">
                            <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <main class="container my-5">
        <div class="bg-white rounded-3 shadow p-4 p-md-5 mb-4">
            <h1 class="display-5 fw-bold text-primary mb-4">@ViewData["Title"]</h1>
            @RenderBody()
        </div>
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>