<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Empresa</title>

    <!-- Bootstrap 5 + Fuentes + Iconos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .bg-custom-primary {
            background-color: #305ca7 !important;
        }

        /* Opcional: Si quieres que sea el color primario de todo Bootstrap */
        :root {
            --bs-primary: #305ca7;
            --bs-primary-rgb: 48, 92, 167;
        }
    </style>
</head>
<body class="d-flex min-vh-100">
    <!-- Mejor uso de clases de Bootstrap -->
    <!-- Sidebar - Versión Desktop -->
    <aside class="d-none d-lg-flex flex-column bg-custom-primary text-white p-3" style="width: 280px;">
        <div class="mb-5 text-center">
            <h1 class="h2 mb-0 fw-bold">
                <a asp-controller="Empresa" asp-action="Inicio" class="text-white text-decoration-none">
                    <i class="fa-solid fa-taxi me-2"></i>Taxis Faca
                </a>
            </h1>
            <hr class="border-2 border-white my-3">
        </div>

        <nav class="flex-grow-1">
            <ul class="nav nav-pills flex-column gap-2">
                <li class="nav-item">
                    <a class="nav-link text-white fs-5 py-3" asp-controller="Empresa" asp-action="Conductores">
                        <i class="fa-solid fa-id-card me-3"></i>Conductores
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white fs-5 py-3" asp-controller="Empresa" asp-action="Vehiculos">
                        <i class="fa-solid fa-car me-3"></i>Vehículos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white fs-5 py-3" asp-controller="Empresa" asp-action="Propietarios">
                        <i class="fa-solid fa-user-tie me-3"></i>Propietarios
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white fs-5 py-3" asp-controller="Empresa" asp-action="Horarios">
                        <i class="fa-solid fa-clock me-3"></i>Horarios
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white fs-5 py-3" asp-controller="Empresa" asp-action="Papelera">
                        <i class="fa-solid fa-trash-can me-3"></i>Papelera
                    </a>
                </li>
            </ul>
        </nav>

        <div class="mt-auto">
            <a class="btn btn-danger w-100 fs-5 py-3" asp-controller="Inicio" asp-action="CerrarSesion">
                <i class="fa-solid fa-power-off me-2"></i>Cerrar Sesión
            </a>
        </div>
    </aside>

    <!-- Contenido Principal -->
    <main class="flex-grow-1">
        <!-- Header Mobile -->
        <header class="d-lg-none bg-custom-primary text-white p-3 d-flex align-items-center">
            <button class="btn btn-lg text-white" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu" aria-label="Abrir menú">
                <i class="fa-solid fa-bars"></i>
            </button>
            <span class="h4 ms-3 fw-bold">@ViewData["Title"]</span>
        </header>

        <!-- Menú Mobile (Offcanvas) - Versión Optimizada -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileMenu">
            <div class="offcanvas-header bg-custom-primary text-white">
                <h2 class="offcanvas-title h5">Menú Principal</h2> <!-- Mejor jerarquía de encabezados -->
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Cerrar menú"></button>
            </div>
            <div class="offcanvas-body p-0 d-flex flex-column">
                <!-- Menú móvil simplificado -->
                <div class="text-center p-3 bg-custom-primary text-white">
                    <h3 class="h5 mb-0">
                        <i class="fa-solid fa-taxi me-2"></i>Taxis Faca
                    </h3>
                </div>

                <nav class="flex-grow-1">
                    <ul class="nav nav-pills flex-column gap-2 p-3">
                        <!-- Mismos elementos del menú -->
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 py-3" asp-controller="Empresa" asp-action="Conductores">
                                <i class="fa-solid fa-id-card me-3"></i>Conductores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 py-3" asp-controller="Empresa" asp-action="Vehiculos">
                                <i class="fa-solid fa-car me-3"></i>Vehículos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 py-3" asp-controller="Empresa" asp-action="Propietarios">
                                <i class="fa-solid fa-user-tie me-3"></i>Propietarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 py-3" asp-controller="Empresa" asp-action="Horarios">
                                <i class="fa-solid fa-clock me-3"></i>Horarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 py-3" asp-controller="Empresa" asp-action="Papelera">
                                <i class="fa-solid fa-trash-can me-3"></i>Papelera
                            </a>
                        </li>

                        <!-- Repetir para otros elementos del menú -->
                    </ul>
                </nav>

                <div class="p-3">
                    <a class="btn btn-danger w-100 fs-5 py-3" asp-controller="Inicio" asp-action="CerrarSesion">
                        <i class="fa-solid fa-power-off me-2"></i>Cerrar Sesión
                    </a>
                </div>
            </div>
        </div>

        <!-- Contenido Dinámico -->
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>