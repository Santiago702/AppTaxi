@model ModeloVista
@{
    ViewData["Title"] = "Empresas";
    Layout = "~/Views/Shared/_LayoutSecretaria.cshtml";
}

<div class="container">
    <h1 class="mb-4 text-center text-primary">Empresas Actuales</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Vista_Agregar_Empresa" asp-controller="Secretaria" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> <strong>Agregar Empresa</strong>
        </a>

        <div class="w-25">
            <input type="text" id="buscarEmpresa" class="form-control"
                   placeholder="🔎Buscar por nombre..." onkeyup="filtrarEmpresas()">
        </div>
    </div>

    @if (Model != null && Model.Empresas.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="contenedor-empresas">
            @foreach (var item in Model.Empresas)
            {
                <div class="col fila-empresa" data-empresa-nombre="@item.Nombre.ToLower()">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0 text-center"><strong>@item.Nombre</strong></h5>
                        </div>

                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">NIT:</dt>
                                <dd class="col-sm-7">@item.Nit</dd>

                                <dt class="col-sm-5">ID Empresa:</dt>
                                <dd class="col-sm-7">@item.IdEmpresa</dd>

                                <dt class="col-sm-5">Representante:</dt>
                                <dd class="col-sm-7">@item.Representante</dd>

                                <dt class="col-sm-5">Cupos:</dt>
                                <dd class="col-sm-7">@item.Cupos</dd>

                                <dt class="col-sm-5">Usuario:</dt>
                                <dd class="col-sm-7">
                                    @Model.Usuarios.FirstOrDefault(u => u.IdUsuario == item.IdUsuario)?.Nombre
                                </dd>
                            </dl>
                        </div>

                        <div class="card-footer bg-transparent">
                            <div class="d-grid gap-2 d-md-flex justify-content-between">
                                <a asp-action="Detalle_Empresa" asp-controller="Secretaria"
                                   asp-route-IdEmpresa="@item.IdEmpresa"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-info-circle"></i> <strong>Detalle</strong>
                                </a>
                                <a asp-action="Editar_Empresa" asp-controller="Secretaria"
                                   asp-route-IdEmpresa="@item.IdEmpresa"
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> <strong>Editar</strong>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <strong><i class="bi bi-exclamation-triangle"></i> No se encontraron empresas registradas</strong>
        </div>
    }

    <p class="text-danger text-center mt-3">@ViewBag.Mensaje</p>
</div>

<script>
    function filtrarEmpresas() {
        const input = document.getElementById('buscarEmpresa').value.toLowerCase();
        const cards = document.querySelectorAll('.fila-empresa');

        cards.forEach(card => {
            const nombreEmpresa = card.dataset.empresaNombre;
            card.style.display = nombreEmpresa.includes(input) ? 'block' : 'none';
        });
    }
</script>