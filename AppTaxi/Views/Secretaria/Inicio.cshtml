@model Usuario
@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_LayoutSecretaria.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center shadow-lg border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <img src="data:image/png;base64,@Model.Foto"
                             class="img-fluid rounded-circle border shadow-sm p-2 profile-img"
                             alt="Usuario"
                             onerror="this.src='https://icons.veryicon.com/png/o/internet--web/prejudice/user-128.png'"
                             style="max-width: 150px;">
                    </div>
                    <h5 class="mt-3 fw-bold text-primary">¡Bienvenido, @Model.Nombre! 🎉</h5>
                    <p class="text-muted">Nos alegra tenerte aquí.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-img {
        transition: transform 0.3s ease-in-out;
    }

        .profile-img:hover {
            transform: scale(1.1);
        }
</style>
