@model ModeloVista
@{
    ViewData["Title"] = "Ver_Horario";
    Layout = "~/Views/Shared/_LayoutSecretaria.cshtml";
}


<div class="container mt-4">
    <h1 class="text-center">Ver Horarios</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">👤 Señor/a <strong>@Model.Conductor.Nombre</strong></h5>
    </div>

    @if (Model.Conductor != null && Model.Horarios != null && Model.Horarios.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped text-center shadow">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Vehículo</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Desde</th>
                        <th scope="col">Hasta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Horarios)
                    {
                        var vehiculo = Model.Vehiculos.FirstOrDefault(v => v.IdVehiculo == item.IdVehiculo);
                        <tr>
                            <td><strong>@item.IdHorario</strong></td>
                            <td>@(vehiculo != null ? vehiculo.Placa : "N/A")</td>
                            <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                            <td>@item.HoraInicio</td>
                            <td>@item.HoraFin</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <p>⚠ No se encontraron horarios registrados.</p>
        </div>
    }

    <p class="text-success text-center">@ViewBag.Mensaje</p>
    <div class="text-center mt-3">
        <a href="javascript:history.back()" class="btn btn-success">Volver</a>
    </div>
</div>

