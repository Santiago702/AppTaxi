@model Vehiculo
@{
    ViewData["Title"] = "Detalle_Vehiculo";
    Layout = "~/Views/Shared/_LayoutSecretaria.cshtml";
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info text-center">@TempData["Mensaje"]</div>
}
<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Información del Vehículo</h5>
        </div>
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Vehículo @Model.Placa</h4>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">Estado Actual:</label>
                <div class="col-sm-9">
                    <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">@(Model.Estado ? "Habilitado" : "No Habilitado")</span>
                </div>
            </div>


            <!-- SOAT -->
            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">SOAT:</label>
                <div class="col-sm-9">
                    <iframe src="data:application/pdf;base64,@Model.Soat" width="60%" height="300px"></iframe>
                    <p class="mt-2 @(Model.VenceSoat <= DateTime.Today ? "text-danger fw-bold" : "text-muted")">
                        <strong>Fecha de vencimiento:</strong> @Model.VenceSoat.ToString("dd-MM-yyyy")
                        @(Model.VenceSoat <= DateTime.Today ? " - Vencida" : "")
                    </p>
                </div>
            </div>

            <!-- Técnico Mecánica -->
            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">Técnico Mecánica:</label>
                <div class="col-sm-9">
                    <iframe src="data:application/pdf;base64,@Model.TecnicoMecanica" width="60%" height="300px"></iframe>
                    <p class="mt-2 @(Model.VenceTecnicoMecanica <= DateTime.Today ? "text-danger fw-bold" : "text-muted")">
                        <strong>Fecha de vencimiento:</strong> @Model.VenceTecnicoMecanica.ToString("dd-MM-yyyy")
                        @(Model.VenceTecnicoMecanica <= DateTime.Today ? " - Vencida" : "")
                    </p>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">ID Propietario:</label>
                <div class="col-sm-9">
                    <input type="text" readonly class="form-control" value="@Model.IdPropietario">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">Propietario:</label>
                <div class="col-sm-9">
                    <input type="text" readonly class="form-control" value="@ViewBag.Propietario">
                </div>
            </div>

            <div class="text-center">
                <p class="text-muted">@ViewBag.Mensaje</p>
            </div>
        </div>

        <div class="card-footer text-center">
            <a href="javascript:history.back()" class="btn btn-success me-2"><i class="fas fa-arrow-left"></i> Volver</a>
            
        </div>
    </div>
</div>

