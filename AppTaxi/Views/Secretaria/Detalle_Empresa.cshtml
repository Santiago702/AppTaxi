@model ModeloVista
@{
    ViewData["Title"] = "Detalle Empresa";
    Layout = "~/Views/Shared/_LayoutSecretaria.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- Card de Empresa -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><strong>Detalle de la Empresa</strong></h4>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <table class="table table-borderless">
                            <tr>
                                <th>Nombre:</th>
                                <td>@Model.Empresa.Nombre</td>
                            </tr>
                            <tr>
                                <th>NIT:</th>
                                <td>@Model.Empresa.Nit</td>
                            </tr>
                            <tr>
                                <th>Representante:</th>
                                <td>@Model.Empresa.Representante</td>
                            </tr>
                        </table>

                        <h5 class="mt-3 text-muted">📞 Información de Contacto</h5>
                        <table class="table table-borderless">
                            <tr>
                                <th><i class="fas fa-envelope"></i> Correo:</th>
                                <td>
                                    @Model.Empresa.RedPrincipal
                                    <button class="btn btn-sm btn-outline-warning" onclick="copyToClipboard('@Model.Empresa.RedPrincipal')">
                                        📋 Copiar
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-at"></i> Alternativa:</th>
                                <td>
                                    @Model.Empresa.RedSecundaria
                                    <button class="btn btn-sm btn-outline-warning" onclick="copyToClipboard('@Model.Empresa.RedSecundaria')">
                                        📋 Copiar
                                    </button>
                                </td>
                            </tr>
                        </table>
                    }
                    else
                    {
                        <p class="text-danger">⚠ Error: El modelo está vacío.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Card de Usuario Encargado + Botones -->
        <div class="col-md-6 d-flex flex-column">
            <div class="card shadow-sm flex-grow-1">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0"><strong>Usuario Encargado</strong></h4>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <img src="@(string.IsNullOrEmpty(Model.Usuario.Foto) ? "/imagenes/noimage.png" : "data:image/png;base64," + Model.Usuario.Foto)"
                             class="img-fluid rounded-circle border shadow-sm p-2"
                             alt="Usuario"
                             style="max-width: 130px;"
                             onerror="this.onerror=null; this.src='/imagenes/noimage.png';">
                        <div>
                            <h5>@Model.Usuario.Nombre</h5>
                            <p><i class="fas fa-envelope"></i> <strong>Correo:</strong> @Model.Usuario.Correo</p>
                            <p><i class="fas fa-mobile-alt"></i> <strong>Teléfono Principal:</strong> @Model.Usuario.Celular</p>
                            <p><i class="fas fa-phone"></i> <strong>Teléfono Secundario:</strong> @Model.Usuario.Telefono</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones que llenan el espacio sobrante -->
            <div class="d-flex flex-column mt-2">
                <a class="btn btn-outline-primary flex-fill mb-2" asp-action="Conductores" asp-route-IdEmpresa="@Model.Empresa.IdEmpresa" asp-controller="Secretaria">Conductores</a>
                <a class="btn btn-outline-secondary flex-fill mb-2" asp-action="Vehiculos" asp-route-IdEmpresa="@Model.Empresa.IdEmpresa" asp-controller="Secretaria">Vehiculos</a>
                <a class="btn btn-outline-success flex-fill" asp-action="Propietarios" asp-route-IdEmpresa="@Model.Empresa.IdEmpresa" asp-controller="Secretaria">Propietarios</a>
            </div>
        </div>
    </div>

    <!-- Modal para mensajes -->
    <div class="modal fade" id="mensajeModal" tabindex="-1" aria-labelledby="mensajeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title" id="mensajeModalLabel">Información</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body text-center" id="modalMensajeTexto">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="text-center mt-4">
        <a href="javascript:history.back()" class="btn btn-danger btn-lg">Volver</a>
    </div>
</div>

<script>
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(() => {
            document.getElementById('modalMensajeTexto').innerText = "Copiado al portapapeles: " + text;
            var mensajeModal = new bootstrap.Modal(document.getElementById('mensajeModal'));
            mensajeModal.show();
        });
        }
</script>
