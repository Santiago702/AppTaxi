@model ModeloVista
@{
    ViewData["Title"] = "Asignar Horarios";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}
<p class="text-sm-center"><strong>Cupos Disponibles : </strong>@ViewBag.Cupos</p>
<br />

@if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <br />
    <p class="text-center">@ViewBag.Mensaje</p>
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning text-center">@TempData["Mensaje"]</div>
}

<div class="card shadow-lg border-0 rounded-3">
    <h5 class="card-header bg-primary text-white text-center py-3">Asignar un único horario</h5>
    <div class="card-body">
        <form asp-action="Crear_Horario" method="post" class="needs-validation" novalidate>
            

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Fecha:</strong></label>
                <div class="col-sm-9">
                    <input type="date" class="form-control" asp-for="Horario.Fecha" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Hora de Inicio:</strong></label>
                <div class="col-sm-9">
                    <input type="time" class="form-control" asp-for="Horario.HoraInicio" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Hora de Fin:</strong></label>
                <div class="col-sm-9">
                    <input type="time" class="form-control" asp-for="Horario.HoraFin" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Vehículo:</strong></label>
                <div class="col-sm-9">
                    <select class="form-select" asp-for="Horario.IdVehiculo" required>
                        <option value="">Seleccione un vehículo</option>
                        @foreach (var vehiculo in Model.Vehiculos)
                        {
                            <option value="@vehiculo.IdVehiculo">@vehiculo.Placa</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Conductor:</strong></label>
                <div class="col-sm-9">
                    <select class="form-select" asp-for="Horario.IdConductor" required>
                        <option value="">Seleccione un conductor</option>
                        @foreach (var conductor in Model.Conductores)
                        {
                            <option value="@conductor.IdConductor">@conductor.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success px-4 me-2"><i class="bi bi-check-circle"></i> <strong>Guardar Horario Único</strong></button>
            </div>
        </form>
    </div>
</div>

<hr class="my-4">
<p class="text-center fw-bold">O también:</p>
<hr class="my-4">

<div class="card shadow-lg border-0 rounded-3 mt-4">
    <h5 class="card-header bg-primary text-white text-center py-3">Asignar múltiples horarios</h5>
    <div class="card-body">
        <form asp-action="Crear_RangoHorarios" method="post" class="needs-validation" novalidate>
            

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Fecha de Inicio:</strong></label>
                <div class="col-sm-9">
                    <input type="date" class="form-control" name="FechaInicio" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Fecha de Fin:</strong></label>
                <div class="col-sm-9">
                    <input type="date" class="form-control" name="FechaFin" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Hora de Inicio:</strong></label>
                <div class="col-sm-9">
                    <input type="time" class="form-control" name="HoraInicio" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Hora de Fin:</strong></label>
                <div class="col-sm-9">
                    <input type="time" class="form-control" name="HoraFin" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Vehículo:</strong></label>
                <div class="col-sm-9">
                    <select class="form-select" name="IdVehiculo" required>
                        <option value="">Seleccione un vehículo</option>
                        @foreach (var vehiculo in Model.Vehiculos)
                        {
                            <option value="@vehiculo.IdVehiculo">@vehiculo.Placa</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Conductor:</strong></label>
                <div class="col-sm-9">
                    <select class="form-select" asp-for="Horario.IdConductor" required>
                        <option value="">Seleccione un conductor</option>
                        @foreach (var conductor in Model.Conductores)
                        {
                            <option value="@conductor.IdConductor">@conductor.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
            {
                <div class="alert alert-info text-center" role="alert">
                    @ViewBag.Mensaje
                </div>
            }

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success px-4 me-2"><i class="bi bi-calendar-check"></i> <strong>Guardar Rango de Horarios</strong></button>
                <a href="javascript:history.back()" class="btn btn-primary px-4"><i class="bi bi-arrow-left"></i> Volver</a>
            </div>
                
        </form>
    </div>
</div>
    




