@model ModeloVista
@{
    ViewData["Title"] = "Ver Horarios de Conductor";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}
<p class="text-sm-center"><strong>Cupos Disponibles : </strong>@ViewBag.Cupos</p>
<br />
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info text-center">@TempData["Mensaje"]</div>
}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">👤 Señor/a <strong>@Model.Conductor.Nombre</strong></h5>
        <a asp-action="Asignar_Horario" asp-controller="Empresa" asp-route-IdConductor="@Model.Conductor.IdConductor" class="btn btn-outline-success">
            ➕ Asignar Horario
        </a>
    </div>

    @if (Model.Conductor != null && Model.Horarios != null && Model.Horarios.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped text-center shadow">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Vehículo</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Desde</th>
                        <th scope="col">Hasta</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Horarios)
                    {
                        var vehiculo = Model.Vehiculos.FirstOrDefault(v => v.IdVehiculo == item.IdVehiculo);
                        <tr>
                            <td><strong>@item.IdHorario</strong></td>
                            <td>@(vehiculo != null ? vehiculo.Placa : "N/A")</td>
                            <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                            <td>@item.HoraInicio</td>
                            <td>@item.HoraFin</td>
                            <td>
                                <a asp-action="Editar_Horario" asp-controller="Empresa" asp-route-IdHorario="@item.IdHorario" class="btn btn-warning btn-sm">
                                    ✏ Editar
                                </a>
                                <a href="javascript:void(0);" class="btn btn-danger btn-sm" onclick="confirmarEliminacion(@item.IdHorario)">
                                    🗑 Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <p>⚠ No se encontraron horarios registrados.</p>
        </div>
    }

    <p class="text-success text-center">@ViewBag.Mensaje</p>
    <div class="text-center mt-3">
        <a href="javascript:history.back()" class="btn btn-success">Volver</a>
    </div>
</div>

<script>
    function confirmarEliminacion(id) {
        if (confirm("¿Está seguro de que desea eliminar este horario?")) {
            window.location.href = "/Empresa/Eliminar_Horario?IdHorario=" + id;
        }
    }
</script>
