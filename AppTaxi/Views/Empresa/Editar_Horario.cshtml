@model ModeloVista
@{
    ViewData["Title"] = "Editar Horario";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center">Editar Horario</h1>

    @if (Model != null)
    {
        <p class="text-muted text-center">Llene los campos que desea editar. <br> Los campos que no se deseen editar pueden quedar vacíos.</p>

        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Horario del Conductor - ID: @Model.Conductor.IdConductor</h5>
            </div>
            <div class="card-body">
                <form asp-action="Guardar_Horario" asp-controller="Empresa" method="post">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>ID Conductor:</strong></label>
                            <input type="number" readonly class="form-control" asp-for="Conductor.IdConductor">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>ID Horario:</strong></label>
                            <input type="number" readonly class="form-control" asp-for="Horario.IdHorario">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>Fecha:</strong></label>
                            <input type="date" class="form-control" asp-for="Horario.Fecha" value="@Model.Horario.Fecha.ToString("yyyy-MM-dd")" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label"><strong>Desde:</strong></label>
                            <input type="time" class="form-control" asp-for="Horario.HoraInicio" value="@Model.Horario.HoraInicio" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label"><strong>Hasta:</strong></label>
                            <input type="time" class="form-control" asp-for="Horario.HoraFin" value="@Model.Horario.HoraFin" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><strong>Vehículo Asignado:</strong></label>
                        <select class="form-control" asp-for="Horario.IdVehiculo" required>
                            <option value="">Seleccione un vehículo</option>
                            @foreach (var vehiculo in Model.Vehiculos)
                            {
                                <option value="@vehiculo.IdVehiculo">@vehiculo.Placa</option>
                            }
                        </select>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success px-4">Guardar Cambios</button>
                        <a href="javascript:history.back()" class="btn btn-danger px-4">Cancelar</a>
                    </div>
                </form>
                <p class="text-center text-success mt-3">@ViewBag.Mensaje</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <p>No se encontró el horario.</p>
            <a href="javascript:history.back()" class="btn btn-primary">Volver</a>
        </div>
    }
</div>
