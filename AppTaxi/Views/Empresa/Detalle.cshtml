@model DatosEmpresa
@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-5 fw-bold text-primary">Detalle del Registro</h1>
        <div class="bg-info rounded-pill px-4 py-2">
            <span class="fs-5 text-white"><strong>Cupos Disponibles:</strong> @ViewBag.Cupos</span>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success fs-5 text-center" role="alert">
            @TempData["Mensaje"]
        </div>
    }

    <!-- Contenido Principal -->
    @if (Model != null)
    {
        <div class="card shadow-lg mx-auto" style="max-width: 600px;">
            <!-- Imagen -->
            <div class="text-center mt-4">
                <img src="@(string.IsNullOrEmpty(Model.Foto) ? "/imagenes/noimage.png" : "data:image/png;base64," + Model.Foto)"
                     class="img-fluid rounded-circle border shadow-sm p-2"
                     alt="Usuario"
                     style="max-width: 150px;"
                     onerror="this.onerror=null; this.src='/imagenes/noimage.png';">
            </div>

            <!-- Información -->
            <div class="card-body">
                <h3 class="card-title text-center text-primary mb-4">
                    <i class="fas fa-info-circle me-2"></i>Información del Vehículo
                </h3>

                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-hashtag me-2"></i>ID del Vehículo:</span>
                        <span class="text-info fw-bold">@Model.IdVehiculo</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-car me-2"></i>Placa:</span>
                        <span>@Model.Placa</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-user-tie me-2"></i>Propietario:</span>
                        <span>@Model.NombrePropietario</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-user me-2"></i>Conductor:</span>
                        <span>@Model.Conductor</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-calendar-day me-2"></i>Fecha:</span>
                        <span>@Model.Fecha.ToString("yyyy-MM-dd")</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-clock me-2"></i>Hora de Inicio:</span>
                        <span>@Model.HoraInicio</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-clock me-2"></i>Hora de Fin:</span>
                        <span>@Model.HoraFin</span>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <div class="card-footer text-center py-3">
                <a class="btn btn-primary px-5" asp-action="Detalle_Vehiculo" asp-controller="Empresa" asp-route-IdVehiculo="@Model.IdVehiculo">
                    <i class="fas fa-eye me-2"></i>Ver Vehículo
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-body text-center py-5">
                <i class="fas fa-exclamation-triangle fa-3x text-muted mb-4"></i>
                <h3 class="text-secondary mb-3">No se encontró el registro solicitado</h3>
            </div>
        </div>
    }

    <!-- Botón de Volver -->
    <div class="text-center mt-5">
        <a href="javascript:history.back()" class="btn btn-secondary px-5">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>
</div>