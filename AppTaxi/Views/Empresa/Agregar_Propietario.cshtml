@model ModeloVista
@{
    ViewData["Title"] = "Agregar Propietario";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<h1>Agregar Propietario</h1>

<div class="card shadow-lg border-0 rounded-3">
    <h5 class="card-header bg-primary text-white text-center py-3">Ingrese los Datos</h5>
    <div class="card-body">
        <form asp-action="Crear_Propietario" asp-controller="Empresa" method="post" class="needs-validation" novalidate enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Foto:</strong></label>
                <div class="col-sm-9">
                    <input type="file" class="form-control" asp-for="Archivo_4" placeholder="Foto" required accept=".png, .jpg, .jpeg">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Nombre:</strong></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Propietario.Nombre" placeholder="Nombre Completo" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Número de Cédula:</strong></label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" asp-for="Propietario.NumeroCedula" placeholder="100000000" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Teléfono:</strong></label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" asp-for="Propietario.Telefono" placeholder="Número de Teléfono" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Celular:</strong></label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" asp-for="Propietario.Celular" placeholder="Número Celular" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Correo:</strong></label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" asp-for="Propietario.Correo" placeholder="Correo Electrónico" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Dirección:</strong></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Propietario.Direccion" placeholder="Cra/Clle X # xx - xx" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Ciudad:</strong></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Propietario.Ciudad" placeholder="Ciudad o Departamento" required>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Documento Cédula:</strong></label>
                <div class="col-sm-9">
                    <input type="file" class="form-control" asp-for="Archivo_1" placeholder="Documento Cedula.pdf" required accept=".pdf">
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success px-4 me-2"><i class="bi bi-check-circle"></i> Crear</button>
                <a href="javascript:history.back()" class="btn btn-secondary px-4"><i class="bi bi-arrow-left"></i> Volver</a>
            </div>

        </form>
    </div>
</div>


<!-- Modal de Confirmación -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Propietario Guardado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p>El propietario ha sido guardado con éxito.</p>
                <p><strong>ID del Propietario:</strong> @ViewBag.IdPropietario</p>
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Propietarios", "Empresa")" class="btn btn-success">Ir a Propietarios</a>
            </div>
        </div>
    </div>
</div>

<p>@ViewBag.Mensaje</p>
@section Scripts {
    <script>
        $(document).ready(function () {
            var exito = "@ViewBag.Exito";
            if (exito === "True") {
                $('#successModal').modal('show'); // Muestra el modal automáticamente si el guardado fue exitoso
            }
        });
    </script>
}
