@model ModeloVista
@{
    ViewData["Title"] = "Editar Vehículo";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<p class="text-sm-center"><strong>Cupos Disponibles : </strong>@ViewBag.Cupos</p>
<br />
@if (TempData["Mensaje"] != null)
{
        <div class="alert alert-info text-center">@TempData["Mensaje"]</div>
}
<div class="container mt-4">
    <h1 class="text-center">Editar Vehículo</h1>

    @if (Model != null)
    {
        <p class="text-muted text-center">Llene los campos que desea editar. <br> Los campos que no se deseen editar pueden quedar vacíos.</p>
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Vehículo - Placa: @Model.Vehiculo.Placa</h5>
            </div>
            <div class="card-body">
                <form id="formEditarVehiculo" asp-action="Guardar_Vehiculo" asp-controller="Empresa" method="post" enctype="multipart/form-data">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>ID Vehículo: </strong></label>
                            <input type="text" class="form-control" readonly asp-for="Vehiculo.IdVehiculo">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Estado Actual: </strong></label>
                            <input type="text" class="form-control" readonly asp-for="Vehiculo.Estado" value="@(Model.Vehiculo.Estado ? "Habilitado" : "No Habilitado")">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>SOAT (Archivo PDF): </strong></label>
                            <input type="file" class="form-control" asp-for="Archivo_1" accept=".pdf">
                            <small class="text-muted">¿Hay archivo cargado?: @(string.IsNullOrEmpty(Model.Vehiculo.Soat) ? "No" : "Sí")</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Técnico Mecánica (Archivo PDF): </strong></label>
                            <input type="file" class="form-control" asp-for="Archivo_2" accept=".pdf">
                            <small class="text-muted">¿Hay archivo cargado?: @(string.IsNullOrEmpty(Model.Vehiculo.TecnicoMecanica) ? "No" : "Sí")</small>
                        </div>
                    </div>

                    <!-- Campos de Fecha de Vencimiento -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>Fecha de Vencimiento SOAT:</strong></label>
                            <input type="date" class="form-control" id="VenceSoat" asp-for="Vehiculo.VenceSoat"
                                   value="@Model.Vehiculo.VenceSoat.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Fecha de Vencimiento Técnico Mecánica:</strong></label>
                            <input type="date" class="form-control" id="VenceTecnicoMecanica" asp-for="Vehiculo.VenceTecnicoMecanica"
                                   value="@Model.Vehiculo.VenceTecnicoMecanica.ToString("yyyy-MM-dd")">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>ID Propietario: </strong></label>
                            <input type="text" readonly class="form-control" asp-for="Vehiculo.IdPropietario" placeholder="@Model.Vehiculo.IdPropietario">
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success px-4">Guardar Cambios</button>
                        <a href="javascript:history.back()" class="btn btn-danger px-4">Cancelar</a>
                    </div>
                </form>
                <p class="text-center text-success mt-3">@ViewBag.Mensaje</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <p>No se encontró el vehículo.</p>
            <a href="javascript:history.back()" class="btn btn-primary">Volver</a>
        </div>
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("formEditarVehiculo").addEventListener("submit", function (event) {
            let fechaActual = new Date().toISOString().split("T")[0]; // Fecha actual en formato YYYY-MM-DD
            let venceSoat = document.getElementById("VenceSoat").value;
            let venceTecnico = document.getElementById("VenceTecnicoMecanica").value;

            let mensajeError = "";

            if (venceSoat && venceSoat <= fechaActual) {
                mensajeError += "📅 La fecha de vencimiento del SOAT debe ser mayor a la fecha actual.\n";
            }

            if (venceTecnico && venceTecnico <= fechaActual) {
                mensajeError += "📅 La fecha de vencimiento de la Técnico Mecánica debe ser mayor a la fecha actual.\n";
            }

            if (mensajeError) {
                alert(mensajeError); // Muestra un mensaje de error al usuario
                event.preventDefault(); // Evita que el formulario se envíe
            }
        });
    });
</script>