@model Vehiculo
@{
    ViewData["Title"] = "Detalle Vehiculo";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Información del Vehículo</h5>
        </div>
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Vehículo @Model.Placa</h4>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">Estado Actual:</label>
                <div class="col-sm-9">
                    <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">@(Model.Estado ? "Habilitado" : "No Habilitado")</span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">SOAT:</label>
                <div class="col-sm-9">
                    <input type="text" readonly class="form-control" value="@Model.Soat">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">Técnico Mecánica:</label>
                <div class="col-sm-9">
                    <input type="text" readonly class="form-control" value="@Model.TecnicoMecanica">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">ID Propietario:</label>
                <div class="col-sm-9">
                    <input type="text" readonly class="form-control" value="@Model.IdPropietario">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label fw-bold">Propietario:</label>
                <div class="col-sm-9">
                    <input type="text" readonly class="form-control" value="@ViewBag.Propietario">
                </div>
            </div>

            <div class="text-center">
                <p class="text-muted">@ViewBag.Mensaje</p>
            </div>
        </div>

        <div class="card-footer text-center">
            <a href="javascript:history.back()" class="btn btn-success me-2"><i class="fas fa-arrow-left"></i> Volver</a>
            <a asp-action="Editar_Vehiculo" asp-controller="Empresa" asp-route-IdVehiculo="@Model.IdVehiculo" class="btn btn-warning me-2"><i class="fas fa-edit"></i> Editar</a>

            <!-- Botón para abrir el modal de confirmación -->
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar este vehículo?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <form asp-action="Eliminar_Vehiculo" asp-controller="Empresa" method="post">
                    <input type="hidden" name="IdVehiculo" value="@Model.IdVehiculo" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>