@model Vehiculo
@{
    ViewData["Title"] = "Detalle Vehiculo";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<h1>Detalle del Vehiculo</h1>
@if (Model != null)
{
    <div class="card">
        <h5 class="card-header">Información:</h5>
        <div class="card-body">
            <h5 class="card-title">Vehículo @Model.Placa</h5>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label"><strong>Estado Actual: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@(Model.Estado ? "Habilitado" : "No Habilitado")">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label"><strong>SOAT: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.Soat">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label"><strong>Tecnico Mecanica: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.TecnicoMecanica">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label"><strong>Id Propietario: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.IdPropietario">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label"><strong>Propietario: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@ViewBag.Propietario">
                    <!--<a asp-action="Detalle_Propietario" asp-controller="Empresa" asp-route-IdPropietario="@Model.IdPropietario" class="btn btn-primary">Ver Propietario</a>
                    -->
                </div>
                
            </div>

            <p>@ViewBag.Mensaje</p>

            <a href="javascript:history.back()" class="btn btn-success">Volver</a>
            <a asp-action="Editar_Vehiculo" asp-controller="Empresa" asp-route-IdVehiculo="@Model.IdVehiculo" class="btn btn-warning">Editar</a>

            <!-- Botón para abrir el modal de confirmación -->
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                Eliminar
            </button>

            <!-- Modal de Confirmación -->
            <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmDeleteLabel">Confirmar Eliminación</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                        </div>
                        <div class="modal-body">
                            ¿Estás seguro de que deseas eliminar este vehículo?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <!-- Formulario para eliminar -->
                            <form asp-action="Eliminar_Vehiculo" asp-controller="Empresa" method="post">
                                <input type="hidden" name="IdVehiculo" value="@Model.IdVehiculo" />
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
else
{
    <p>No se encontró el Dato:</p>
    <p>@ViewBag.Mensaje</p>
    <a href="javascript:history.back()" class="btn btn-success">Volver</a>
}
