@model Vehiculo
@{
    ViewData["Title"] = "Detalle Vehiculo";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<h1>Detalle del Vehiculo</h1>
@if(Model != null)
{
    
    <div class="card">
        <h5 class="card-header">Información:</h5>
        <div class="card-body">
            
            <h5 class="card-title">Vehículo @Model.Placa</h5>

            <div class="mb-3 row">
                <label for="staticEstado" class="col-sm-2 col-form-label"><strong>Estado Actual: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticEstado" value="@(Model.Estado ? "Habilitado" : "No Habilitado")">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="staticSOAT" class="col-sm-2 col-form-label"><strong>SOAT: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticSOAT" value="@Model.Soat">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="staticTecnicoMecanica" class="col-sm-2 col-form-label"><strong>Tecnico Mecanica: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticTecnicoMecanica" value="@Model.TecnicoMecanica">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="staticIdPropietario" class="col-sm-2 col-form-label"><strong>Id Propietario: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticIdPropietario" value="@Model.IdPropietario">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="staticPropietario" class="col-sm-2 col-form-label"><strong>Propietario: </strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticPropietario" value="@ViewBag.Propietario">
                </div>
            </div>
            <p>@ViewBag.Mensaje</p>
            <a href="javascript:history.back()" class="btn btn-success">Volver</a>
            <a asp-action="Editar_Vehiculo" asp-controller="Empresa" asp-route-IdVehiculo="@Model.IdVehiculo" class="btn btn-warning">Editar</a>
            <a href="#" class="btn btn-danger">Eliminar</a>
        </div>
    </div>
}
else
{
    <p>No se encontró el Dato:</p>
    <p>@ViewBag.Mensaje</p>

    <a href="javascript:history.back()" class="btn btn-success">Volver</a>
}



