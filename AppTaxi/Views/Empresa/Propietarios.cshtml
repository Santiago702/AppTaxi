@model List<Propietario>
@{
    ViewData["Title"] = "Propietarios";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<h1>Propietarios</h1>
<p>Propietarios de la empresa:</p>
<br />
<a asp-action="Agregar_Propietario" asp-controller="Empresa" class="btn btn-outline-success btn-sm"><strong>Agregar Propietario</strong></a>
@if (Model != null)
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID Vehiculo</th>
                <th scope="col">Nombre</th>
                <th scope="col">Cedula</th>
                <th scope="col">Telefono</th>
                <th scope="col">Correo</th>
                <th scope="col">Ciudad</th>
                <th scope="col">Detalle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdPropietario</td>
                    <td class="col-Nombre">@item.Nombre</td>
                    <td class="col-Cedula">@item.NumeroCedula</td>
                    <td class="col-Telefono">@item.Telefono</td>
                    <td class="col-Correo">@item.Correo</td>
                    <td class="col-Correo">@item.Ciudad</td>

                    <td><a asp-action="Detalle_Propietario" asp-controller="Empresa" asp-route-IdPropietario="@item.IdPropietario" class="btn btn-primary btn-sm">Ver</a></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No se encontraron Propietarios registrados</p>
}
<p>@ViewBag.Mensaje</p>

