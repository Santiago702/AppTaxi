@model List<Propietario>
@{
    ViewData["Title"] = "Propietarios";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<p class="text-sm-center"><strong>Cupos Disponibles : </strong>@ViewBag.Cupos</p>
<br />
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info text-center">@TempData["Mensaje"]</div>
}
<h1 class="mb-4 text-center text-primary">Propietarios  de la empresa</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Agregar_Propietario" asp-controller="Empresa" class="btn btn-outline-success">
        <strong>➕ Agregar Propietario</strong>
    </a>

    <input type="text" id="buscarPropietario" class="form-control w-25" placeholder="🔍 Buscar por nombre..." onkeyup="filtrarPropietarios()">
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cédula</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">ID</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Ciudad</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="fila-propietario">
                        <td>@item.Contador</td>
                        <td class="col-Nombre">@item.Nombre</td>
                        <td>@item.NumeroCedula</td>
                        <td>@item.Telefono</td>
                        <td>@item.IdPropietario</td>
                        <td>@item.Correo</td>
                        <td>@item.Ciudad</td>
                        <td>
                            <a asp-action="Detalle_Propietario" asp-controller="Empresa" asp-route-IdPropietario="@item.IdPropietario" class="btn btn-primary btn-sm">
                                Detalle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center mt-4">
        <strong>⚠ No se encontraron Propietarios registrados.</strong>
    </div>
}

<p class="text-danger text-center">@ViewBag.Mensaje</p>

<script>
    function filtrarPropietarios() {
        let input = document.getElementById("buscarPropietario").value.toLowerCase();
        let filas = document.getElementsByClassName("fila-propietario");

        for (let i = 0; i < filas.length; i++) {
            let nombre = filas[i].getElementsByClassName("col-Nombre")[0].innerText.toLowerCase();
            filas[i].style.display = nombre.includes(input) ? "" : "none";
        }
    }
</script>


