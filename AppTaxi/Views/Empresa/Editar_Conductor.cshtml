@model Conductor
@{
    ViewData["Title"] = "Editar Conductor";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<h1 class="text-center mb-4">Editar Conductor</h1>

@if (Model != null)
{
    <p class="text-muted text-center">Llene los campos que desea editar.</p>
    <p class="text-muted text-center">Los campos que no se deseen editar pueden quedar vacíos.</p>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Información del Conductor: @Model.Nombre</h5>
        </div>
        <div class="card-body">
            <form asp-action="Guardar_Conductor" asp-controller="Empresa" method="post" enctype="multipart/form-data">

                <!-- Foto -->
                <div class="mb-3">
                    <label class="form-label"><strong>Foto:</strong></label>
                    <input type="file" class="form-control" asp-for="Foto" accept=".png, .jpg, .jpeg">
                </div>

                <!-- Documento y ID -->
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label"><strong>Documento:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="NumeroCedula">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>ID:</strong></label>
                        <input type="number" readonly class="form-control" asp-for="IdConductor">
                    </div>
                </div>

                <!-- Teléfono y Celular -->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label"><strong>Teléfono:</strong></label>
                        <input type="number" class="form-control" asp-for="Telefono" placeholder="@Model.Telefono">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>Celular:</strong></label>
                        <input type="number" class="form-control" asp-for="Celular" placeholder="@Model.Celular">
                    </div>
                </div>

                <!-- Correo y Dirección -->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label"><strong>Correo:</strong></label>
                        <input type="email" class="form-control" asp-for="Correo" placeholder="@Model.Correo">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>Dirección:</strong></label>
                        <input type="text" class="form-control" asp-for="Direccion" placeholder="@Model.Direccion">
                    </div>
                </div>

                <!-- Ciudad y Estado -->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label"><strong>Ciudad:</strong></label>
                        <input type="text" class="form-control" asp-for="Ciudad" placeholder="@Model.Ciudad">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>Estado Actual:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="Estado" value="@(Model.Estado ? "Activo" : "Inactivo")">
                    </div>
                </div>

                <!-- Grupo Sanguíneo, EPS y ARL -->
                <div class="row mt-3">
                    <div class="col-md-4">
                        <label class="form-label"><strong>RH:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="GrupoSanguineo">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label"><strong>EPS:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="Eps">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label"><strong>ARL:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="Arl">
                    </div>
                </div>

                <!-- Documentos -->
                <div class="row mt-3">
                    <div class="col-md-4">
                        <label class="form-label"><strong>Documento Cédula:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="DocumentoCedula">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label"><strong>Documento EPS:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="DocumentoEps">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label"><strong>Documento ARL:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="DocumentoArl">
                    </div>
                </div>

                <!-- Botones -->
                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-success px-4">Guardar Cambios</button>
                    <a href="javascript:history.back()" class="btn btn-danger px-4">Cancelar</a>
                </div>

            </form>
        </div>
    </div>

    <p class="text-center mt-3 text-danger">@ViewBag.Mensaje</p>
}
else
{
    <div class="alert alert-warning text-center mt-4" role="alert">
        <p>No se encontró el dato.</p>
        <a href="javascript:history.back()" class="btn btn-success">Volver</a>
    </div>
}

