@model ModeloVista 
@{
    ViewData["Title"] = "Editar Conductor";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}
<p class="text-sm-center"><strong>Cupos Disponibles : </strong>@ViewBag.Cupos</p>
<br />

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info text-center">@TempData["Mensaje"]</div>
    @if(TempData["Mensaje"].ToString() == "No se encontró usuario asignado")
    {
        <a asp-action="Crear_Usuario" asp-controller="Empresa" asp-route-IdConductor="@Model.Conductor.IdConductor" class="btn btn-outline-success"><strong>Crear</strong></a>
    }
    
}

@if (Model != null)
{
    <p class="text-muted text-center">Llene los campos que desea editar.</p>
    <p class="text-muted text-center">Los campos que no se deseen editar pueden quedar vacíos.</p>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Información del Conductor: @Model.Conductor.Nombre</h5>
        </div>
        <div class="card-body">
            <form asp-action="Guardar_Conductor" asp-controller="Empresa" method="post" enctype="multipart/form-data">

                <!-- Foto -->
                <div class="mb-3">
                    <label class="form-label"><strong>Foto:</strong></label>
                    <input type="file" class="form-control" asp-for="Archivo_4" accept=".png, .jpg, .jpeg">
                </div>

                <!-- Documento y ID -->
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label"><strong>Documento:</strong></label>
                        <input type="text"  class="form-control" asp-for="Conductor.NumeroCedula">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>ID:</strong></label>
                        <input type="number" readonly class="form-control" asp-for="Conductor.IdConductor">
                    </div>
                </div>

                <!-- Teléfono y Celular -->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label"><strong>Teléfono:</strong></label>
                        <input type="number" class="form-control" asp-for="Conductor.Telefono" placeholder="@Model.Conductor.Telefono">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>Celular:</strong></label>
                        <input type="number" class="form-control" asp-for="Conductor.Celular" placeholder="@Model.Conductor.Celular">
                    </div>
                </div>

                <!-- Correo, Dirección y Contraseña-->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label"><strong>Correo:</strong></label>
                        <input type="email" class="form-control" asp-for="Conductor.Correo" placeholder="@Model.Conductor.Correo">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>Contraseña:</strong></label>
                        <input type="password" class="form-control" asp-for="Conductor.Contrasena" placeholder="@Model.Conductor.Contrasena">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>Dirección:</strong></label>
                        <input type="text" class="form-control" asp-for="Conductor.Direccion" placeholder="@Model.Conductor.Direccion">
                    </div>
                </div>

                <!-- Ciudad y Estado -->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label"><strong>Ciudad:</strong></label>
                        <input type="text" class="form-control" asp-for="Conductor.Ciudad" placeholder="@Model.Conductor.Ciudad">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><strong>Estado Actual:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="Conductor.Estado" value="@(Model.Conductor.Estado ? "Activo" : "Inactivo")">
                    </div>
                </div>

                <!-- Grupo Sanguíneo, EPS y ARL -->
                <div class="row mt-3">
                    <div class="col-md-4">
                        <label class="form-label"><strong>RH:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="Conductor.GrupoSanguineo">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label"><strong>EPS:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="Conductor.Eps">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label"><strong>ARL:</strong></label>
                        <input type="text" readonly class="form-control" asp-for="Conductor.Arl">
                    </div>
                </div>

                <!-- Documentos -->
                <div class="row mt-3">
                    <div class="col-md-4">
                        <label class="form-label"><strong>Documento Cédula:</strong></label>
                        <input type="file"  class="form-control" asp-for="Conductor.DocumentoCedula">
                        <small class="text-muted">¿Hay archivo cargado?: @(string.IsNullOrEmpty(Model.Conductor.DocumentoCedula) ? "No" : "Sí")</small>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label"><strong>Documento EPS:</strong></label>
                        <input type="file"  class="form-control" asp-for="Conductor.DocumentoEps">
                        <small class="text-muted">¿Hay archivo cargado?: @(string.IsNullOrEmpty(Model.Conductor.DocumentoEps) ? "No" : "Sí")</small>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label"><strong>Documento ARL:</strong></label>
                        <input type="file"  class="form-control" asp-for="Conductor.DocumentoArl">
                        <small class="text-muted">¿Hay archivo cargado?: @(string.IsNullOrEmpty(Model.Conductor.DocumentoArl) ? "No" : "Sí")</small>
                    </div>
                </div>

                <!-- Botones -->
                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-success px-4">Guardar Cambios</button>
                    <a href="javascript:history.back()" class="btn btn-danger px-4">Cancelar</a>
                </div>

            </form>
        </div>
    </div>

    <p class="text-center mt-3 text-danger">@ViewBag.Mensaje</p>
}
else
{
    <div class="alert alert-warning text-center mt-4" role="alert">
        <p>No se encontró el dato.</p>
        <a href="javascript:history.back()" class="btn btn-success">Volver</a>
    </div>
}

