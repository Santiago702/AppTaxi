@model ModeloVista
@{
    ViewData["Title"] = "Agregar Vehículo";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}
<p class="text-sm-center"><strong>Cupos Disponibles : </strong>@ViewBag.Cupos</p>
<br />
<h1>Agregar un Vehículo</h1>
<div class="card shadow-lg border-0 rounded-3">
    <h5 class="card-header bg-primary text-white text-center py-3">Ingrese los Datos del Vehículo</h5>
    <div class="card-body">
        <form asp-action="Crear_Vehiculo" asp-controller="Empresa" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Placa:</strong></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Vehiculo.Placa" placeholder="Ingrese la placa" required>
                </div>
            </div>

            <!-- SOAT -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label"><strong>SOAT (Archivo PDF): </strong></label>
                    <input type="file" class="form-control" asp-for="Archivo_1" accept=".pdf" required>
                    <small class="text-muted">Suba el archivo del SOAT</small>
                </div>

                <!-- Técnico Mecánica -->
                <div class="col-md-6">
                    <label class="form-label"><strong>Técnico Mecánica (Archivo PDF): </strong></label>
                    <input type="file" class="form-control" asp-for="Archivo_2" accept=".pdf" required>
                    <small class="text-muted">Suba el archivo de la revisión técnico mecánica</small>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"><strong>Propietario:</strong></label>
                <div class="col-sm-9">
                    <select class="form-select" asp-for="Vehiculo.IdPropietario" required>
                        <option value="">Seleccione un propietario</option>
                        @foreach (var propietario in Model.Propietarios)
                        {
                            <option value="@propietario.IdPropietario">@propietario.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
            {
                <div class="alert alert-info text-center" role="alert">
                    @ViewBag.Mensaje
                </div>
            }

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success px-4 me-2"><i class="bi bi-check-circle"></i> Crear</button>
                <a href="javascript:history.back()" class="btn btn-secondary px-4"><i class="bi bi-arrow-left"></i> Volver</a>
            </div>

        </form>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">🚀 Vehículo Guardado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>El vehículo ha sido guardado con éxito.</p>
                <p><strong>ID del Vehículo:</strong> @ViewBag.IdVehiculo</p>
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Vehiculos", "Empresa")" class="btn btn-success">Ir a Vehículos</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var exito = "@ViewBag.Exito";
            if (exito === "True") {
                $('#successModal').modal('show'); // Muestra el modal automáticamente si el guardado fue exitoso
            }
        });
    </script>
}
