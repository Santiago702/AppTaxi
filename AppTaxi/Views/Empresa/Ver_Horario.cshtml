@model ModeloVista
@{
    ViewData["Title"] = "Ver Horario";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<h1>Ver Horarios</h1>
<a asp-action="Asignar_Horario" asp-controller="Empresa" asp-route-IdConductor="@Model.Conductor.IdConductor" class="btn btn-outline-success btn-sm"><strong>Asignar Horario</strong></></a>
@if (Model.Conductor != null && Model.Horarios != null)
{
    <h5>Señor/a @Model.Conductor.Nombre</h5>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Vehiculo</th>
                <th scope="col">Fecha</th>
                <th scope="col">Desde</th>
                <th scope="col">Hasta</th>
                <th scope="col">Opciones</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var item in Model.Horarios)
            {
                <tr>
                    <td>@item.IdHorario</td>
                    <td>@Model.Vehiculos.Where(v => v.IdVehiculo == item.IdVehiculo).FirstOrDefault().Placa</td>
                    <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                    <td>@item.HoraInicio</td>
                    <td>@item.HoraFin</td>
                    <td>
                        <a asp-action="Editar_Horario" asp-controller="Empresa" asp-route-IdHorario="@item.IdHorario" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Eliminar_Horario" asp-controller="Empresa" asp-route-IdHorario="@item.IdHorario" class="btn btn-danger btn-sm">Eliminar</a>
                        
                    </td>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No se encontraron Horarios registrados</p>
}

<p>@ViewBag.Mensaje</p>
<a href="javascript:history.back()" class="btn btn-success">Volver</a>