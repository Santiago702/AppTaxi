@model Propietario
@{
    ViewData["Title"] = "Editar Propietario";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center">Editar Propietario</h1>

    @if (Model != null)
    {
        <p class="text-muted text-center">Llene los campos que desea editar. <br> Los campos que no se deseen editar pueden quedar vacíos.</p>
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Señor/a @Model.Nombre</h5>
            </div>
            <div class="card-body">
                <form asp-action="Guardar_Propietario" asp-controller="Empresa" method="post">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>Documento: </strong></label>
                            <input type="text" readonly class="form-control" asp-for="NumeroCedula">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Foto: </strong></label>
                            <input type="file" class="form-control" asp-for="Foto" accept=".png, .jpg, .jpeg">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>ID: </strong></label>
                            <input type="number" readonly class="form-control" asp-for="IdPropietario">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Estado Actual: </strong></label>
                            <input type="text" readonly class="form-control" asp-for="Estado" value="@(Model.Estado ? "Activo" : "Inactivo")">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>Teléfono: </strong></label>
                            <input type="number" class="form-control" asp-for="Telefono" placeholder="@Model.Telefono">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Celular: </strong></label>
                            <input type="number" class="form-control" asp-for="Celular" placeholder="@Model.Celular">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>Correo: </strong></label>
                            <input type="email" class="form-control" asp-for="Correo" placeholder="@Model.Correo">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Dirección: </strong></label>
                            <input type="text" class="form-control" asp-for="Direccion" placeholder="@Model.Direccion">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>Ciudad: </strong></label>
                            <input type="text" class="form-control" asp-for="Ciudad" placeholder="@Model.Ciudad">
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success px-4">Guardar Cambios</button>
                        <a href="javascript:history.back()" class="btn btn-danger px-4">Cancelar</a>
                    </div>
                </form>
                <p class="text-center text-success mt-3">@ViewBag.Mensaje</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <p>No se encontró el propietario.</p>
            <a href="javascript:history.back()" class="btn btn-primary">Volver</a>
        </div>
    }
</div>
